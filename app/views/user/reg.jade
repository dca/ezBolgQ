extends ../layout

block content
  form.form-horizontal
      .control-group
        label.control-label(for='inputEmail') Email
        .controls
          input#inputEmail(type='text', placeholder='Email')
      .control-group
        label.control-label(for='inputPassword') Password
        .controls
          input#inputPassword(type='password', placeholder='Password')
      .controls-group
        label.control-label(for='inputPasswordAgain') password-repeat
        .controls
          input#inputPasswordAgain(type='password', placeholder='Password Repeat')
      .control-group
        .controls
          label.checkbox
            input(type='checkbox')
            | Remember me

          button.btn(type='submit') Sign in